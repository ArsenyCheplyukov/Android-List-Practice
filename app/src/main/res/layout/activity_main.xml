<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/idRLContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbarSize="14sp"
    tools:context=".MainActivity">

    <!--on below line we are creating edit text
         for adding a new item to list-->

    <TextView
        android:id="@+id/Delay_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:text="Delay: "
        android:textSize="26sp" />
    <EditText
        android:id="@+id/Enter_delay"
        android:layout_width="232dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="85dp"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:layout_toLeftOf="@id/idBtnAdd"
        android:hint="Enter delay in ms"
        android:minHeight="24dp" />


    <TextView
        android:id="@+id/X_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:text="X: "
        android:textSize="26sp" />
    <EditText
        android:id="@+id/Enter_X"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:hint="Enter x in mm"
        android:textSize="10dp" />


    <TextView
        android:id="@+id/Y_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="135dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:text="Y: "
        android:textSize="26sp" />
    <EditText
        android:id="@+id/Enter_Y"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="165dp"
        android:layout_marginRight="165dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:hint="Enter y in mm"
        android:textSize="10dp" />


    <TextView
        android:id="@+id/Z_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="265dp"
        android:layout_marginLeft="265dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:text="Z: "
        android:textSize="26sp" />
    <EditText
        android:id="@+id/Enter_Z"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="295dp"
        android:layout_marginRight="295dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:hint="Enter z in mm"
        android:textSize="10dp" />


    <TextView
        android:id="@+id/Name_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:text="Name:"
        android:textSize="26sp" />
    <TextView
        android:id="@+id/name"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="85dp"
        android:layout_marginRight="85dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:text=""
        android:textSize="26sp" />

    <!--button for adding item from edit text to list-->
    <Button
        android:id="@+id/idBtnAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:text="Add"
        android:textAllCaps="false" />

    <!--list view to display list of languages-->
    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="425dp"
        android:layout_below="@id/name"
        android:layout_marginTop="5dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_below="@id/listview"
        android:layout_marginTop="50dp" />

    <Button
        android:id="@+id/add_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="95dp"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="550dp"
        android:layout_marginBottom="130dp"
        android:text="Add"
        android:textSize="12sp" />

    <Button
        android:id="@+id/stop_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="550dp"
        android:layout_marginBottom="130dp"
        android:text="Stop"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/Enter_action_name"
        android:layout_alignParentBottom="true"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="200dp"
        android:layout_marginLeft="200dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="130dp"
        android:hint="Enter action name"
        android:minHeight="24dp" />


</RelativeLayout>