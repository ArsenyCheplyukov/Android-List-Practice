<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:id="@+id/list_item_thumbnail"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@mipmap/ic_launcher"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/x_axis_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/list_item_thumbnail"
        android:text="X:" />

    <TextView
        android:id="@+id/x_data"
        android:layout_width="36dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/list_item_thumbnail"
        android:text="" />

    <TextView
        android:id="@+id/y_axis_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="59dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/list_item_thumbnail"
        android:text="Y:" />

    <TextView
        android:id="@+id/y_data"
        android:layout_width="36dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="74dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/list_item_thumbnail"
        android:text="" />

    <TextView
        android:id="@+id/z_axis_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="112dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/list_item_thumbnail"
        android:text="Z:" />

    <TextView
        android:id="@+id/z_data"
        android:layout_width="36dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="125dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/list_item_thumbnail"
        android:text="" />

    <TextView
        android:id="@+id/delay_title"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="25dp"
        android:layout_toEndOf="@+id/list_item_thumbnail"
        android:text="Delay:" />

    <TextView
        android:id="@+id/delay_data"
        android:layout_width="59dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="51dp"
        android:layout_marginTop="25dp"
        android:layout_toEndOf="@+id/list_item_thumbnail"
        android:text="" />

    <TextView
        android:id="@+id/delay_dim"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="112dp"
        android:layout_marginTop="25dp"
        android:layout_toEndOf="@+id/list_item_thumbnail"
        android:text="ms" />

    <Button
        android:layout_width="75dp"
        android:layout_height="35dp"
        android:text="Apply"
        android:textSize="8sp"
        android:layout_alignParentRight="true"
        android:id="@+id/list_item_btn"/>
    <Button
        android:layout_width="75dp"
        android:layout_height="35dp"
        android:layout_marginRight="75dp"
        android:text="Catch"
        android:textSize="8sp"
        android:layout_alignParentRight="true"
        android:id="@+id/list_item_btn"/>

    <Button
        android:id="@+id/delete_buttons"
        android:layout_width="75dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="75dp"
        android:layout_marginTop="25dp"
        android:text="Delete"
        android:textSize="8sp" />

    <Button
        android:id="@+id/edit_buttons"
        android:layout_width="75dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="75dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="75dp"
        android:layout_marginRight="75dp"
        android:text="Edit"
        android:textSize="8sp" />

    <Button
        android:id="@+id/up_buttons"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="0dp"
        android:foreground="@android:drawable/arrow_up_float" />

    <Button
        android:id="@+id/down_buttons"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="29dp"
        android:foreground="@android:drawable/arrow_down_float" />

</RelativeLayout>